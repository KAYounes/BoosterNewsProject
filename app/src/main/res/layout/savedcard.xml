<?xml version="1.0" encoding="utf-8"?>

<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/cardConstraintView"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="5dp"
    android:background="@drawable/round_purple_yellow_grad_bg"
    android:paddingStart="10dp"
    android:paddingTop="15dp"
    android:paddingEnd="8dp"
    android:paddingBottom="15dp">

    <androidx.cardview.widget.CardView
        android:id="@+id/thumbnailCard"
        android:layout_width="80dp"
        android:layout_height="80dp"
        app:cardCornerRadius="15dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <ImageView
            android:id="@+id/headlineThumbnail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:adjustViewBounds="true"
            android:scaleType="centerCrop"
            tools:src="@drawable/yellow_globe" />

    </androidx.cardview.widget.CardView>

    <TextView
        android:id="@+id/headlineTitle"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="8dp"
        android:ellipsize="end"
        android:maxLines="3"
        android:text="Sonos stock falls after report highlights removal of its smart speakers from Apple stores - MarketWatch"
        android:textColor="@color/MainText"
        android:textSize="14dp"
        android:textStyle="bold"
        app:layout_constraintEnd_toStartOf="@id/arrowMenueTop"
        app:layout_constraintStart_toEndOf="@+id/thumbnailCard"
        app:layout_constraintTop_toTopOf="@id/thumbnailCard" />

    <TextView
        android:id="@+id/headlineSource"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="edition.cnn.com â€¢ 1h"
        android:textColor="@color/additionalText"
        app:layout_constraintBottom_toBottomOf="@id/thumbnailCard"
        app:layout_constraintEnd_toStartOf="@id/headlineNumber"
        app:layout_constraintStart_toStartOf="@id/headlineTitle"/>

    <TextView
        android:id="@+id/headlineNumber"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:maxLines="1"
        android:text="# 1"
        android:textColor="@color/MainText"
        app:layout_constraintBottom_toBottomOf="@id/thumbnailCard"
        app:layout_constraintEnd_toEndOf="@id/headlineTitle"/>

    <ImageView
        android:id="@+id/arrowMenueTop"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:src="@drawable/drag_menue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/headlineTitle" />

    <ImageView
        android:id="@+id/arrowMenueBottom"
        android:layout_width="20dp"
        android:layout_height="20dp"
        android:layout_marginTop="10dp"
        android:src="@drawable/drag_menue"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="@id/arrowMenueTop"/>
</androidx.constraintlayout.widget.ConstraintLayout>

